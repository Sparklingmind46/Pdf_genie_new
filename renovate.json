{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "semanticCommits": "enabled",
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "schedule": ["after 6pm every weekday", "every weekend"],
  "timezone": "Australia/Sydney",
  "packageRules": [
    {
      "groupName": "CI",
      "semanticCommitType": "ci",
      "matchPaths": [".github/workflows/*.yml", ".pre-commit-config.yaml"],
      "labels": ["ci"]
    },
    {
      "groupName": "Docker",
      "semanticCommitScope": "docker",
      "matchFiles": ["Dockerfile"],
      "labels": ["docker"]
    }
  ]
}
